{# html for character form #}
    <!-- Form with the character details -->
    <div id="char_detail" class="md-layer md-none">
        <h1 id="character_details">{{ _('Character Details') }}</h1>
        <h2 id="character_add">{{ _('Add Character') }}</h2>
        <h2 id="character_edit">{{ _('Edit Character') }}</h2>
        <p class="mb-3">{{ _('Items marked with an asterisk {star} are required to be filled out.').format(star='<span class="text-danger">*</span>') }}</p>
        <form id="character_details_form" onsubmit="return false;" class="rounded-3 border p-2">
            <input type="hidden" name="csrf_token" id="csrf_token" value="{{ csrf_token() }}">
            <input type="hidden" value="" id="char_id" name="id">
            <div id="character_image" class="float-end border rounded-2 me-1 mt-1">
                <div class="edit-icon">
                    <img src="{{ url_for('static', filename='empty-char-picture-edit.svg') }}" title="{{ _('Edit') }}">
                </div>
            </div>
            <div class="row">
                <div class="col-4 p-3">
                    <input type="text" class="form-control border-0 fs-2 form-validate" placeholder="*{{ _('First Name') }}" name="first_name" id="char_first_name">
                    <div class="invalid-feedback">{{ _('Please enter a valid first name. It should be at least one character long.') }}</div>
                </div>
                <div class="col-4 h2 p-3">
                    <input type="text" class="form-control border-0 fs-2" placeholder="{{ _('Last Name') }}" name="last_name" id="char_last_name">
                </div>
                <div class="col-4">
                    <!-- {{ _('Character image will go over this') }} -->
                </div>
            </div>
            <div class="row ps-3 mb-4">
                <label class="col-1 col-form-label text-end" for="char_age">{{ _('Age') }}:</label>
                <div class="col-2">
                    <input type="text" class="form-control" placeholder="35" name="age" id="char_age" title="{{ _('This can be a number or a range (e.g. in his 30â€™s)') }}">
                </div>
                <label class="col-1 col-form-label text-end" for="char_sex"><span class="text-danger">*</span>{{ _('Sex') }}:</label>
                <div class="col-2">
                    <select class="form-select form-validate" name="sex" id="char_sex">
                        <option value="0">{{ _('Select') }}...</option>
                        <option value="male">{{ _('Male') }}</option>
                        <option value="female">{{ _('Female') }}</option>
                    </select>
                    <div class="invalid-feedback">{{ _('Please select the sex of the character.') }}</div>
                </div>
                <label class="col-2 col-form-label text-end" for="char_marital_status"><span class="text-danger">*</span>{{ _('Marital Status') }}:</label>
                <div class="col-3">
                    <select class="form-select" name="marital_status" id="char_marital_status">
                        <option value="0">{{ _('Select') }}...</option>
                        <option value="single">{{ _('Single') }}</option>
                        <option value="married">{{ _('Married') }}</option>
                        <option value="divorced">{{ _('Divorced') }}</option>
                        <option value="widowed">{{ _('Widowed') }}</option>
                    </select>
                    <div class="invalid-feedback">{{ _('Please select the marital status of the character.') }}</div>
                </div>
            </div>
            <div class="row mb-4">
                <div class="col-6">
                    <div class="row">
                        <label class="col-4 col-form-label text-end" for="char_employment">{{ _('Employment') }}:</label>
                        <div class="col-8">
                            <input type="text" class="form-control" name="employment" id="char_employment">
                        </div>
                    </div>
                </div>
                <div class="col-6">
                    <div class="row">
                        <label class="col-3 col-form-label text-end" for="char_residence">{{ _('Residence') }}:</label>
                        <div class="col-7">
                            <select class="form-select" name="residence" id="char_residence">
                                <option value="0">{{ _('Select') }}...</option>
                            </select>
                        </div>
                        <div class="col-2 pt-1">
                            <button class="btn btn-sm btn-outline-secondary" title="{{ _('Add Location') }}" type="button" id="char_btn_add_residence"><i class="bi-plus"></i></button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mb-2">
                <div class="col ps-3 pe-3">
                    
                    <div id="character_image_body" class="border rounded-2 float-end mt-4">
                        <div class="edit-icon">
                            <img src="{{ url_for('static', filename='empty-char-picture-edit.svg') }}" title="{{ _('Edit') }}">
                        </div>                
                    </div>
                    <label class="h3" for="char_physical_description" class="form-label">{{ _('Physical Description') }}:</label>
                    <div class="row">
                        <div class="col">
                            <textarea class="form-control" name="physical" id="char_physical_description" rows="7"></textarea>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mb-4">
                <label class="col-3 col-form-label text-end" for="char_animation_status">{{ _('Animation Model Status') }}:</label>
                <div class="col-3">
                    <select class="form-select" name="animation_status" id="char_animation_status">
                        <option value="unnecessary">{{ _('Unnecessary') }}</option>
                        <option value="notdefined" selected>{{ _('Not Defined') }}</option>
                        <option value="defined">{{ _('Defined') }}</option>
                        <option value="designing">{{ _('Being Designed') }}</option>
                        <option value="available">{{ _('Available') }}</option>
                        <option value="inuse">{{ _('In use') }}</option>
                    </select>
                </div>
            </div>
            <div class="row mb-4">
                <div class="col ps-3 pe-3">
                    <label class="h3" for="char_personality_description" class="form-label">{{ _('Personality Description') }}:</label>
                    <div class="ps-2 pe-2">
                        <textarea class="form-control" name="personality" id="char_personality_description" rows="5"></textarea>
                    </div>
                </div>
            </div>
            <div class="row mb-4">
                <label class="h3" for="char_acted_by">{{ _('Character Acted by') }}:</label>
                <div class="row ps-4 pe-3">
                    <div class="col-10">
                        <select id="char_acted_by" name="acted_by" class="form-select dselect-search">
                            <option value="0">{{ _('Select') }}...</option>
                        </select>
                    </div>
                    <div class="col-2 pt-1">
                        <button class="btn btn-sm btn-outline-secondary" title="{{ _('Add Actor') }}" type="button" id="char_btn_add_actor"><i class="bi-plus"></i></button>
                    </div>
                </div>
            </div>
            <div class="row mb-4">
                <div class="col ps-3 pe-3">
                    <div class="float-end">
                        <button class="btn btn-sm btn-outline-secondary" title="{{ _('Add Relationship') }}" type="button" id="char_btn_add_relationship"><i class="bi-plus"></i></button>
                    </div>
                    <h3>{{ _('Relationships to Other Characters') }}:</h3>
                    <p id="char_no_relationships" class="ms-3">{{ _('None') }}</p>
                    <div id="char_relationships_table_container" class="rounded-3 overflow-hidden mb-3 border md-none">
                        <table class="table table-striped m-0">
                            <thead class="bg-dark text-light">
                                <tr>
                                    <th class="col-4 ps-3">{{ _('Full Name') }}</th>
                                    <th class="col-3">{{ _('Relationship') }}</th>
                                    <th class="col-1"><!-- {{ _('Sex') }} --></th>
                                    <th class="col-4"><!-- {{ _('Buttons') }} --></th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>        
                    </div>
                </div>
            </div>
            <div class="row mb-4">
                <div class="col ps-3 pe-3">
                    <div class="float-end">
                        <button class="btn btn-sm btn-outline-secondary" title="{{ _('Add Episode') }}" type="button" id="char_btn_add_episode"><i class="bi-plus"></i></button>
                    </div>
                    <h3>{{ _('Appears in Episodes') }}:</h3>
                    <p id="char_no_eps" class="ms-3">{{ _('None') }}</p>
                    <div id="char_eps_table_container" class="rounded-3 overflow-hidden mb-3 border md-none">
                        <table class="table table-striped m-0">
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-4 ps-3">
                    <a href="#/"><button class="btn btn-outline-dark back-to-list" type="button">
                        <i class="bi-chevron-right rtl-icon"></i><i class="bi-chevron-left ltr-icon"></i> {{ _('Back to List') }}
                    </button></a>
                </div>
                <div class="col-4 text-center">
                    <button class="btn btn-outline-danger" type="button" id="del_char_btn">
                        <i class="bi-trash3-fill"></i> {{ _('Delete Character') }}
                    </button>
                </div>
                <div class="col-4 pe-3 text-end">
                    <button class="btn btn-success" type="button" id="save_char_btn">
                        <i class="bi-check"></i> {{ _('Save Character') }}
                    </button>
                </div>
            </div>
        </form>
        <p>&nbsp;</p>
    </div>
{# </div> #}