{# modal to append episode to character #}
<div class="modal fade" id="appendEpisodeModal" data-bs-backdrop="static" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content ">
            <div class="modal-header h4">
                {{ _('Assign Episode to Character') }}
            </div>
            <div class="modal-body" id="appendEpisodeModal_body">
                <ul class="nav nav-tabs" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="appendEpisodeModal_select_tab" data-bs-toggle="tab" data-bs-target="#appendEpisodeModal_select"><i class="bi-cursor"></i> {{ _('Select Episode') }}</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" data-bs-target="#appendEpisodeModal_add" id="appendEpisodeModal_add_tab" data-bs-toggle="tab"><i class="bi-plus"></i> {{ _('Add Episode') }}</button>
                    </li>
                </ul>
                <div class="tab-content p-3" id="addEpisodeModal_tab_content">
                    <div class="tab-pane fade show active" id="appendEpisodeModal_select" role="tabpanel">
                        <select class="form-select dselect-search" id="append_selected_episode" name="append_selected_episode" placeholder="">
                            <option value="0">{{ _('Select episode here...') }}</option>
                        </select>
                    </div>
                    <div class="tab-pane fade" id="appendEpisodeModal_add" role="tabpanel">
                        <div class="row mb-3">
                            <div class="col-2 pe-3">
                                <div class="row">
                                    <label class="form-label" for="append_new_episode_num">{{ _('Episode #') }} </label>
                                    <input type="number" class="form-control" id="append_new_episode_num" name="append_new_episode_num" placeholder="101">
                                    <div class="invalid-feedback">{{ _('Please enter a valid episode number.') }}</div>
                                </div>
                            </div>
                            <div class="col-10 ps-3">
                                <div class="row">
                                    <label class="form-label" for="append_new_episode_title">{{ _('Episode Title') }}</label>
                                    <input type="text" class="form-control" id="append_new_episode_title" name="append_new_episode_title">
                                    <div class="invalid-feedback">{{ _('Please enter a valid episode title of at least one character.') }} </div>
                                </div>
                            </div>
                        </div>
                        <div class="invalid-feedback" id="appendEpisodeModal_episode_exists_msg">{{ _('An episode with this number already exists. Please use the Select Episode tab above to select that episode or change the episode number.') }}</div>
                    </div> 
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-dark" data-bs-dismiss="modal"><i class="bi-ban"></i> {{ _('Cancel') }}</button>
                <button type="button" class="btn btn-success" id="appendEpisodeModal_save"><i class="bi-check"></i> {{ _('Save') }}</button>
            </div>
        </div>
    </div>
</div>