{# main html template for app #}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta encoding="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/png" href="{{ url_for('static', filename='ed-logo-128.png') }}">

    <link href="{{ url_for('static', filename='bootstrap-5.2.3-dist/css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ url_for('static', filename='bootstrap-icons-1.11.3/font/bootstrap-icons.css') }}" rel="stylesheet">
    <link href="{{ url_for('static', filename='style.css') }}" rel="stylesheet">

    <title>{% block title %}{% endblock %}</title>
</head>
<body>
    <div id="flash"></div>
        <button type="button" class="btn btn-sm float-end" id="flash_dismiss"><i class="bi-x-lg"></i></button>
        <div id="flash_msg">Message here</div>
    </div>
    <header>
    {% block nav %}{% endblock%}
    </header>
    <main>
    {% block content %}{% endblock %}
    </main>
    <footer class="footer sticky mt-auto py-3 bg-light fixed-bottom">
        <div class="container-fluid">
            {{ _('Copyright') }} &copy; 2024 JS Prodüksiyon Ltd. Şti. {{ _('Released under GNU GPL 3.0') }}
        </div>
    </footer>

    {# scripts go here #}
    <script src="{{ url_for('static', filename='jquery-3.7.1.min.js') }}"></script>
    <script src="{{ url_for('static', filename='bootstrap-5.2.3-dist/js/bootstrap.bundle.min.js') }}"></script>
    <script src="{{ url_for('static', filename='ui.js') }}"></script>
</body>
</html>