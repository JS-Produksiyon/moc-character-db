{#- main html template for app -#}
<!DOCTYPE html>
<html lang="{{ language_code() }}" dir="{{ text_direction() }}">
<head>
    <meta encoding="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/png" href="{{ url_for('static', filename='ed-logo-128.png') }}">

    <link href="{{ url_for('static', filename='bootstrap-5.2.3-dist/css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ url_for('static', filename='bootstrap-icons-1.11.3/font/bootstrap-icons.css') }}" rel="stylesheet">
    <link href="{{ url_for('static', filename='dselect/dselect.min.css') }}" rel="stylesheet">
    <link href="{{ url_for('static', filename='style.css') }}" rel="stylesheet">

    <title>{% block title %}{% endblock %}</title>
</head>
<body class="{{ text_direction() }}">
    <!-- flash messages -->
    <div id="flash">
        <button type="button" class="btn btn-sm float-end" id="flash_dismiss"><i class="bi-x-lg"></i></button>
        <div id="flash_msg"></div>
    </div>

    <header>
        {% block nav %}{% endblock%}
    </header>

    <main>
        <!-- loading animations -->
        {# <div class="md-load spinner-border text-secondary md-none" role="status"><div class="visually-hidden">{{ _('Loading') }}...</div></div> #}
        <div class="md-load lion">
            <img src="{{ url_for('static', filename='ed-logo.svg') }}" alt="{{ _('Loading') }}...">
        </div>

        <!-- main content -->
        <div class="container mt-3 mb-3 h-100">
            {% block content %}{% endblock %}
        </div>
    </main>

    <footer class="footer sticky mt-auto py-3 bg-light fixed-bottom">
        <div class="container-fluid">
            <div id="unsavedIcon" class="float-end mb-0 me-2 h5 text-primary md-none" title="{{ _('Character has been changed and is not saved.') }}"><i class="bi bi-person-exclamation"></i></div>
            {{ _('Copyright') }} &copy; 2024 JS Prodüksiyon Ltd. Şti. {{ _('Released under GNU GPL 3.0') }}
        </div>
    </footer>

    <!-- Modals -->
    {% block modals %}{% endblock %}

    <!-- JavaScript -->
    <script src="{{ url_for('static', filename='jquery-3.7.1.min.js') }}"></script>
    <script src="{{ url_for('static', filename='jquery.scrollTo.js')}}"></script>
    <script src="{{ url_for('static', filename='bootstrap-5.2.3-dist/js/bootstrap.bundle.min.js') }}"></script>
    <script src="{{ url_for('static', filename='dselect/dselect.min.js') }}"></script>
    {% block custom_js %}{% endblock %}
</body>
</html>