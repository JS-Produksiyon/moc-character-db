{# Add or edit Episode modal, called from Episode List #}
<div class="modal fade" id="addEditEpisodeModal" data-bs-backdrop="static" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header h4">
                <span id="addEditEpisodeModal_title_add" class="md-none">{{ _('Add Episode') }}</span>
                <span id="addEditEpisodeModal_title_edit">{{ _('Edit Episode')}}</span>
            </div>
            <div class="modal-body" id="addEditEpisodeModal_body">
                <p>{{ _('Fill in the fields marked with an asterisk {asterisk} below to {add}{edit} the episode.').format(
                    asterisk='<span class="text-danger">*</span>',
                    add='<span id="addEditEpisodeModal_txt_add">{}</span>'.format(_('add')),
                    edit='<span id="addEditEpisodeModal_txt_edit">{}</span>'.format(_('edit'))
                ) }}</p>
                <div class="row mb-3">
                    <label class="form-label col-3 text-end pt-2"><span class="text-danger">*</span>{{ _('Episode #') }}:</label>
                    <div class="col-9">
                        <input type="number" class="form-control form-validate" id="addEditEpisodeModal_ep_num" name="ep_num" placeholder="101">
                        <div class="invalid-feedback">{{ _('Please enter a valid episode number. It is either too short or is already in use.') }}</div>
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="form-label col-3 text-end pt-2"><span class="text-danger">*</span>{{ _('Episode Title') }}:</label>
                    <div class="col-9">
                        <input type="text" class="form-control form-validate" id="addEditEpisodeModal_ep_title" name="ep_title" placeholder="">
                        <div class="invalid-feedback">{{ _('Please enter a valid episode title. It should be at least one character long.') }}</div>
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="form-label col-3 text-end pt-2">{{ _('Episode Recorded') }}:</label>
                    <div class="col-9">
                        <input type="date" class="form-control" id="addEditEpisodeModal_ep_date" name="ep_date" placeholder="">
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-dark" data-bs-dismiss="modal"><i class="bi-ban"></i> {{ _('Cancel') }}</button>
                <button type="button" class="btn btn-success" id="addEditEpisodeModal_save"><i class="bi-check"></i> {{ _('Save') }}</button>
            </div>
        </div>
    </div>
</div>